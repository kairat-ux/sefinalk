<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-create-reservations-table-v2" author="system">
        <createTable tableName="reservations">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_reservations_user"
                             references="users(id)"/>
            </column>
            <column name="restaurant_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_reservations_restaurant"
                             references="restaurants(id)"/>
            </column>
            <column name="reservation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="start_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_time" type="TIME">
                <constraints nullable="false"/>
            </column>
            <column name="guest_count" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="special_requests" type="TEXT"/>
            <column name="status" type="VARCHAR(20)" defaultValue="PENDING">
                <constraints nullable="false"/>
            </column>
            <column name="cancelled_at" type="TIMESTAMP"/>
            <column name="cancel_reason" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="reservations" indexName="idx_reservations_user">
            <column name="user_id"/>
        </createIndex>
        <createIndex tableName="reservations" indexName="idx_reservations_restaurant">
            <column name="restaurant_id"/>
        </createIndex>
        <createIndex tableName="reservations" indexName="idx_reservations_date">
            <column name="reservation_date"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
